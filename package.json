{
  "name": "electron_test",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.joker.app",
    "productName": "Joker的贪吃蛇",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "./logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Joker的贪吃蛇",
      "allowElevation": true,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": true
    }
  },
  "author": "Joker",
  "license": "ISC",
  "description": "自己做的一个贪吃蛇小游戏",
  "devDependencies": {
    "electron": "^19.1.9",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10"
  }
}
